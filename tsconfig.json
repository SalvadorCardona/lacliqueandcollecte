{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./assets/scripts",
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "experimentalDecorators": true,
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@app/*": ["./*"]
    }
  },
  "typeRoots": [
    "./node_modules/@types"
  ]
}